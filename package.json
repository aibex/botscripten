{
  "name": "@aibex/botscripten",
  "version": "0.5.1",
  "description": "Craft rich bot conversations using the Twine/Twee format",
  "repository": "github:aibexhq/botscripten",
  "author": "Aibex, Inc <oss@aibex.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.18.0 <11 || >=12.14.0 <13 || >=13.5.0"
  },
  "main": "index.js",
  "browser": "dist/botscripten.umd.js",
  "scripts": {
    "dev": "NODE_ENV=development concurrently -r \"npm:dev:*\"",
    "test": "yarn build && jest",
    "build": "yarn clean:dist && concurrently \"npm:build:*\"",
    "buildAll": "yarn clean:dist && concurrently \"npm:build:*\" && yarn examples",
    "tweego": "TWEEGO_PATH=./dist/Twine2 tweego",
    "ci": "pretty-quick --check && yarn build && jest",
    "release": "semantic-release",
    "____________________": "echo \"The following sub-commands are used to serve the main commands above\"",
    "build:twine": "rollup -c -m inline && node scripts/createTwine",
    "build:node": "rm -rf dist/node/* && babel src/node --out-dir dist/npm/node && babel src/common --out-dir dist/npm/common",
    "clean:dist": "rm -rf dist/",
    "dev:watch": "nodemon -L --ignore dist/ --exec yarn buildAll",
    "dev:serve": "nodemon -L --watch build/ --watch scripts/ --exec node scripts/serve",
    "examples": "concurrently -r \"npm:examples:*\"",
    "examples:onboarding": "yarn tweego -f Botscripten -o ./examples/onboarding.html ./examples/onboarding.twee",
    "format:prettier": "pretty-quick --staged",
    "husky:precommit": "concurrently \"npm:format:*\" && yarn build && git add dist/ && jest",
    "commit:cz": "exec < /dev/tty && git-cz --hook || true"
  },
  "keywords": [
    "twine",
    "twinery",
    "storyformat",
    "trialogue",
    "botscript",
    "bot",
    "botframework"
  ],
  "dependencies": {
    "@babel/runtime": "^7.7.7",
    "html-entities": "^1.2.1",
    "jest": "^24.9.0",
    "jsdom": "^16.1.0",
    "lodash.escape": "^4.0.1",
    "lodash.template": "^4.5.0",
    "lodash.unescape": "^4.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "7.8.6",
    "commitizen": "^4.0.3",
    "concurrently": "^5.0.2",
    "conventional-changelog-conventionalcommits": "^4.2.3",
    "emoji-cz": "^0.3.0",
    "extwee": "^1.5.0",
    "fs-extra": "^8.1.0",
    "husky": "^4.2.1",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.0",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.2.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^17.0.2",
    "static-server": "^2.2.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run husky:precommit",
      "prepare-commit-msg": "if [ -t 1 ] ; then yarn run commit:cz; fi"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
